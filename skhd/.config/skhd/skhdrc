# fast focus desktop
# alt - tab : yabai -m space --focus recent

#alt - tab : yabai -m display --focus "$( expr \( $(yabai -m query --displays --display | jq '.index') \) % 3 + 1 )"
#alt - tab : yabai -m display --focus `yabai -m query --displays --display | jq '.index'`

alt - tab : index=$(yabai -m query --displays --display | jq '.index'); yabai -m display --focus $index

# send window to monitor and follow focus
shift + alt - n : yabai -m window --display next; yabai -m display --focus next
shift + alt - p : yabai -m window --display prev; yabai -m display --focus prev

ctrl - 0 : yabai -m space --focus $(yabai -m query --spaces | jq '.[] | select(."is-native-fullscreen") | .index' | head -1)

cmd - tab [
  "UTM" : true
  * ~
]
